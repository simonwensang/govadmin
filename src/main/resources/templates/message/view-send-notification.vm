</head>
<body>
    #parse("header.vm")
<div class="main-container" id="main-container">

    <div class="main-container-inner">

        #parse("menu.vm")

        <div class="main-content">
            <div class="breadcrumbs" id="breadcrumbs">
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home home-icon"></i>
                        <a href="/index">首页</a>
                    </li>
                    <!--<li>-->
                    <!--<a href="#">Other Pages</a>-->
                    <!--</li>-->
                    <!--<li class="active">Blank Page</li>-->
                </ul>
            </div>

            <div class="page-content">
                <div class="row">
                    <div class="col-xs-12">
                        <!-- PAGE CONTENT BEGINS -->

                        <div class="row form-horizontal">

                            <div class="space-10"></div>

                            <div class="widget-box">
                                <div class="widget-header">
                                    <h4>查看通知</h4>
                                </div>
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <div class="table-responsive">
                                            <table id="sample-table-1"
                                                   class="table table-striped table-bordered table-hover"
                                                   style="margin-bottom: 0;">
                                                <thead>
                                                <tr>
                                                    <th>通知时间</th>
                                                    <th>受通知人</th>
                                                    <th>通知内容</th>
                                                    <th>附件</th>
                                                    <th>操作</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                    #foreach($message in $result.rows)
                                                    <tr>
                                                        <td>$dateTimeUtil.format($!{message.createTime},
                                                            'yyyy-MM-dd HH:mm:ss')</td>
                                                        <td>$!{message.user}</td>
                                                        <td>$!{message.content}</td>
                                                        <td>
                                                            #if (!$!{message.attachment})
                                                                <label>$!{message.attachmentFile}</label>
                                                                <a href="$!{message.attachment}" target="_blank"
                                                                   style="cursor: pointer;margin-left: 10px">查看附件</a>
                                                            #else
                                                                无
                                                            #end
                                                        </td>
                                                        <td>
                                                            <a class="delete" href="javascript:void(0)"
                                                               data-id="$!{message.id}">查看</a>

                                                        </td>
                                                    </tr>
                                                    #end
                                                </tbody>
                                            </table>
                                        </div>

                                        <div style="text-align: center;">
                                            <ul class="pagination">
                                                <li>
                                                    <a href="/message/view?page=$!{result.pre}">
                                                        <i class="icon-double-angle-left"></i>
                                                    </a>
                                                </li>

                                                #foreach($pag in [1..$result.total])
                                                    <li
                                                        #if($result.page==$!{pag})
                                                                class="active"
                                                        #end
                                                    ><a href="/message/view?page=$!{pag}">$!{pag}</a></li>
                                                #end
                                                <li>
                                                    <a href="/message/view?page=$!{result.next}">
                                                        <i class="icon-double-angle-right"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="space-10"></div>

                        </div>

                        <!-- PAGE CONTENT ENDS -->
                    </div>
                </div>
            </div>
        </div>

    </div>


    <div id="modal-table" class="modal fade select-p-wrap" tabindex="-1" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header no-padding">
                    <div class="table-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="white">×</span>
                        </button>
                        <span id="model_title">通知详情</span>
                    </div>
                </div>

                <div class="modal-body">
                    <div class="well well-lg">
                        <h4 class="blue">通知详情</h4>
                        <div id="tzxq"></div>
                    </div>
                    <table class="table table-striped table-bordered table-hover no-margin-bottom">
                        <thead>
                        <tr>
                            <th>受通知人</th>
                            <th>操作情况</th>
                        </tr>
                        </thead>
                        <tbody id="tzbody">
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>


</div>

<script src="assets/js/jquery-1.10.2.min.js"></script>
