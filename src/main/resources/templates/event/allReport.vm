<script>
    $(function () {
        laydate({
            elem: '#report-time-picker',
            format: 'YYYY-MM-DD hh:mm:ss', // 分隔符可以任意定义，该例子表示只显示年月
            festival: true, //显示节日,
            istime: true, //是否开启时间选择
            choose: function (datas) { //选择日期完毕的回调
//                alert('得到：' + datas);
            }
        });
    });
	
	function  download(){
		var eventType = $("#eventType").val();
		var windowparam = $("#window").val();
		var auditor = $("#auditor").val();
		var reportTime = $("#report-time-picker").val();
		var commitUser = $("#commitUser").val();
		var handler = $("#handler").val();
		var eventNo = $("#eventNo").val();
		var grade =  $('#form-field-select-1').val(); 
		var community = $("#community").val();
		var url = "/event/excel?eventType="+eventType+"&window="+windowparam+"&auditor="+auditor+"&reportTime="+reportTime+"&commitUser="+commitUser+"&handler="+handler+"&eventNo="+eventNo+"&grade="+grade+"&community="+community;
		window.location.href = url;
		
	}

	function deleteEvent(id){
        confirmShows("确认删除？", function () {
            $.ajax({
                type: "post",
                url: '/event/delete',
                data: {
                    id:id
                },
                dataType: 'json',
                success: function (data) {
                    alertShow(data.msg, function () {
                        location.reload();
                    });
                },
                error: function (data) {
                    if(data.msg){
                        alertShow(data.msg);
                    }
                    if(data.readyState == 4){
                        alertShow("Request Not Found");
                    }
                }
            });
        });

    }

    function queryAll(page){
        $("#page").val(page);
        $("#createForm").submit();
    }
</script>
</body>
</html>