<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>全部上报</title>
  	#parse("tags.vm")
    <style>
        .form-group {
            margin-left: 0 !important;
            margin-right: 0 !important;
        }

        .laydate_box, .laydate_box *, .laydate_box *:before, .laydate_box *:after {
            -webkit-box-sizing: content-box;
            -moz-box-sizing: content-box;
            box-sizing: content-box;
        }

        .laydate_box input[readonly] {
            background: #fff !important;
        }

        .input-group-addon {
            width: auto;
        }
    </style>
</head>
<body>
 #parse("header.vm")

<div class="main-container" id="main-container">

    <div class="main-container-inner">

        #parse("menu.vm")
        <div class="main-content">
            <div class="breadcrumbs" id="breadcrumbs">
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home home-icon"></i>
                        <a href="/index">首页</a>
                    </li>
                    <!--<li>-->
                    <!--<a href="#">Other Pages</a>-->
                    <!--</li>-->
                    <!--<li class="active">Blank Page</li>-->
                </ul>
            </div>

            <div class="page-content">
                <div class="row">
                    <div class="col-xs-12">
                        <!-- PAGE CONTENT BEGINS -->

                        <div class="row form-horizontal">
                            <div class="form-group" style="max-width: 1100px;">
                                <label class="col-sm-1 control-label no-padding-right"> 上报时间 </label>
                                <div class="col-sm-2">
                                    <div class="input-group">
                                        <input class="" id="report-time-picker" type="text">
                                        <span class="input-group-addon"><i class="icon-calendar bigger-110"></i></span>
                                    </div>
                                </div>
                                <label class="col-sm-1 control-label no-padding-right"> 网格员 </label>
                                <div class="col-sm-2">
                                    <input type="text" class="col-sm-12">
                                </div>
                                <label class="col-sm-1 control-label no-padding-right"> 网格员 </label>
                                <div class="col-sm-2">
                                    <input type="text" class="col-sm-12">
                                </div>
                                <label class="col-sm-1 control-label no-padding-right"> 网格员 </label>
                                <div class="col-sm-2">
                                    <input type="text" class="col-sm-12">
                                </div>
                            </div>
                            <div class="form-group" style="max-width: 1100px;">
                                <label class="col-sm-1 control-label no-padding-right"> 事件编号 </label>
                                <div class="col-sm-2">
                                    <input type="text" class="col-sm-12" style="width: 202px;">
                                </div>
                                <label class="col-sm-1 control-label no-padding-right"> </label>
                                <div class="col-sm-2">
                                    <select class="form-control" id="form-field-select-1">
                                        <option value="AL">全部事件级别</option>
                                        <option value="AL2">一般</option>
                                        <option value="AK">严重</option>
                                        <option value="AZ">重大</option>
                                    </select>
                                </div>
                                <label class="col-sm-1 control-label no-padding-right"> 村/社区 </label>
                                <div class="col-sm-2">
                                    <input type="text" class="col-sm-12">
                                </div>
                                <div class="col-sm-3">
                                    <button type="button" class="btn btn-sm btn-primary" style="width: 100px;margin-right: 10px;">
                                        查询
                                        <i class="icon-search bigger-110"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-success">
                                        导出Excel
                                        <i class="icon-file-text bigger-110"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="table-responsive">
                                    <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <th>事件编号</th>
                                            <th>问题描述</th>
                                            <th class="hidden-480">上报类型</th>
                                            <th>上报时间</th>
                                            <th class="hidden-480">事件级别</th>
                                            <th>社区</th>
                                            <th>提报人</th>
                                            <th>审核人</th>
                                            <th>派遣人</th>
                                            <th>状态</th>
                                            <th>操作</th>
                                        </tr>
                                        </thead>
                                        <tbody>
											#foreach($event in $result.rows)
                                            <tr>
                                                <td><a href="/event/detail?$!{event.id}">$!{event.eventNo}</a></td>
                                                <td>$!{event.description}</td>
                                                <td class="hidden-480">
													#if ($!{event.eventType}==1)
														治安防范 
													#elseif	($!{event.eventType}==2)
														集镇管理
													#elseif	($!{event.eventType}==3)
														矛盾纠纷
													#elseif	($!{event.eventType}==4)
														基层党建
													#elseif	($!{event.eventType}==5)
														民生服务
													#elseif	($!{event.eventType}==6)
														其他服务
													#else
														--
													#end
												</td>
                                                <td>$!{event.report_time}</td>
                                                <td class="hidden-480">
													#if ($!{event.grade}==1)
														<span class="label">一般</span>
													#elseif	($!{event.grade}==2)
														<span class="label label-danger">重大</span>
													#elseif	($!{event.grade}==2)
														<span class="label label-warning">严重</span>
													#else
														<span class="label">--</span>
													#end
                                                </td>
                                                <td>$!{event.community}</td>
                                                <td>$!{event.commitUser}</td>
                                                <td>$!{event.auditor}</td>
                                                <td>$!{event.handler}</td>
                                                <td>
													#if ($!{event.eventStatus}==0)
														初始 
													#elseif	($!{event.eventStatus}==1)
														待审核
													#elseif	($!{event.eventStatus}==2)
														待处置
													#elseif	($!{event.eventStatus}==3)
														已处理
													#else
														--
													#end
												</td>
												<td>
													#if ($!{event.showAudit}==true)
													<a class='btn btn-primary btn-sm ' style='margin-right: 6px' 
													href= '/event/approval?id=$!{event.id}' >
													<i class='ace-icon fa fa-pencil'></i>审批</a> 
													#end	
													#if	($!{event.showManager}==true)
														<a class='btn btn-primary btn-sm ' style='margin-right: 6px' 
														href= '/event/manage?id=$!{event.id}' >
														<i class='ace-icon fa fa-pencil'></i>处理</a> 
													#end
													#if	($!{event.showDetail}==true)
														<a class='btn btn-primary btn-sm ' style='margin-right: 6px' 
													href= '/event/detail?id=$!{event.id}' >
													<i class='ace-icon fa fa-pencil'></i>明细</a> 
													#end
												</td>
                                            </tr>
                                           #end
                                        </tbody>
                                    </table>
                                </div><!-- /.table-responsive -->
                            </div><!-- /span -->
                        </div>

                        <div style="text-align: center;">
                            <ul class="pagination">
                                <li  >
                                    <a href="/event/allReport?page=$!{result.pre}">
                                        <i class="icon-double-angle-left"></i>
                                    </a>
                                </li>
								
								 #foreach($page in [1..$result.total])
								 <li 
									#if($result.page==$!{page})
									class="active" 
									#end
								 ><a href="/event/allReport?page=$!{page}">$!{page}</a></li>
								 #end
 
                                <li>
                                    <a href="/event/allReport?page=$!{result.next}">
                                        <i class="icon-double-angle-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- PAGE CONTENT ENDS -->
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>

<script src="assets/js/jquery-1.10.2.min.js"></script>
<script src="assets/js/bootstrap.min.js"></script>
<script src="assets/js/ace-elements.min.js"></script>
<script src="assets/js/ace.min.js"></script>
<script src="assets/js/laydate.js"></script>
<script>
    $(function () {
        laydate({
            elem: '#report-time-picker',
            format: 'YYYY-MM-DD hh:mm:ss', // 分隔符可以任意定义，该例子表示只显示年月
            festival: true, //显示节日,
            istime: true, //是否开启时间选择
            choose: function (datas) { //选择日期完毕的回调
//                alert('得到：' + datas);
            }
        });
    });
</script>
</body>
</html>